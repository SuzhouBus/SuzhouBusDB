<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fangjue.suzhoubusdb.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/busId"
            android:layout_weight="4"
            android:hint="1-1001"
            android:contextClickable="false" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/licenseId"
            android:layout_weight="4"
            android:hint="3G317" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lineId"
            android:layout_weight="3"
            android:hint="931" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/update"
            android:layout_weight="2"
            android:onClick="onUpdateClicked" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="â‡¦"
            android:id="@+id/keyDel"
            android:layout_weight="1.5"
            android:onClick="keyClicked" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/busList"
        android:layout_weight="1" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3,4,5,6">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="A"
                android:id="@+id/keyA"
                android:layout_column="0"
                android:layout_gravity="center"
                android:onClick="keyClicked" />

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="B"
                android:id="@+id/keyB"
                android:layout_column="1"
                android:layout_gravity="center"
                android:onClick="keyClicked" />

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="C"
                android:id="@+id/keyC"
                android:layout_column="2"
                android:layout_gravity="center"
                android:onClick="keyClicked" />

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="D"
                android:id="@+id/keyD"
                android:layout_column="3"
                android:layout_gravity="center"
                android:onClick="keyClicked" />

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="E"
                android:id="@+id/keyE"
                android:layout_column="4"
                android:layout_gravity="center"
                android:onClick="keyClicked" />

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="F"
                android:id="@+id/keyF"
                android:layout_column="5"
                android:layout_gravity="center"
                android:onClick="keyClicked" />

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="*"
                android:id="@+id/keyMRU1"
                android:layout_column="5"
                android:layout_gravity="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="G"
                android:id="@+id/keyG"
                android:layout_column="0"
                android:layout_gravity="center"
                android:onClick="keyClicked" />

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="H"
                android:id="@+id/keyH"
                android:layout_column="1"
                android:layout_gravity="center"
                android:onClick="keyClicked" />

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="J"
                android:id="@+id/keyJ"
                android:layout_column="2"
                android:layout_gravity="center"
                android:onClick="keyClicked" />

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="K"
                android:id="@+id/keyK"
                android:layout_column="3"
                android:layout_gravity="center"
                android:onClick="keyClicked" />

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="L"
                android:id="@+id/keyL"
                android:layout_column="4"
                android:layout_gravity="center"
                android:onClick="keyClicked" />

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="M"
                android:id="@+id/keyM"
                android:layout_column="5"
                android:layout_gravity="center"
                android:onClick="keyClicked" />

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="*"
                android:id="@+id/keyMRU2"
                android:layout_column="5"
                android:layout_gravity="center" />
        </TableRow>
    </TableLayout>
    <TableLayout
