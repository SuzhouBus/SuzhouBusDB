                android:text="N"
                android:id="@+id/keyN"
                android:layout_column="0"
                android:layout_gravity="center"
                android:onClick="keyClicked" />

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="P"
                android:id="@+id/keyP"
                android:layout_column="1"
                android:layout_gravity="center"
                android:onClick="keyClicked" />

            <Button
