                android:layout_height="35dp"
                android:text="Y"
                android:id="@+id/keyY"
                android:layout_column="4"
                android:layout_gravity="center"
                android:onClick="keyClicked" />

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="Z"
                android:id="@+id/keyZ"
                android:layout_column="5"
                android:layout_gravity="center"
