                android:layout_column="2"
                android:layout_gravity="center"
                android:onClick="keyClicked" />

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="R"
                android:id="@+id/keyR"
                android:layout_column="3"
